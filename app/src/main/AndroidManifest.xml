<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.branded.hossamhassan.hossam_popular_movies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App.HossPopularMoviesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityScrollingMovieDetails"
            android:label="@string/title_activity_activity_scrolling_movie_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivitySearch"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>