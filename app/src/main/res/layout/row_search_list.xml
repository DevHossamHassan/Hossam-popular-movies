<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/recycler_padding"
    android:id="@+id/cv_company"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgComCard"
            android:layout_width="@dimen/row_search_ic_width"
            android:layout_height="@dimen/row_search_ic_width"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_sea"
            android:layout_margin="4dp"
            android:padding="1dp"
            android:background="@android:color/darker_gray"
            android:scaleType="fitXY" />


        <TextView
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/tvComNameCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="InterStellar"
            android:textSize="16sp"
            android:textColor="@android:color/black"
             />


    </LinearLayout>


</android.support.v7.widget.CardView>